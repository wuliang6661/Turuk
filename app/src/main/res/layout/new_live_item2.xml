<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/parentLayout"
    android:background="@drawable/list_bg">

    <RelativeLayout
        android:layout_height="44dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#353535"
            android:layout_centerVertical="true"
            android:layout_marginStart="18dp"
            android:text="00:00 - 01:20"/>
        <TextView
            android:id="@+id/txtState"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:layout_toEndOf="@id/time"
            android:textSize="15sp"
            android:layout_marginStart="13dp"
            android:layout_centerVertical="true"
            android:text="已结束"
            android:layout_marginBottom="5dp"/>
        <RelativeLayout
            android:id="@+id/rlRemindMe"
            android:layout_width="71dp"
            android:layout_height="21dp"
            android:layout_alignParentEnd="true"
            android:background="@mipmap/blue_reminded"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:visibility="gone">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#FEFEFE"
                android:textSize="10sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="7dp"
                android:text="取消提醒"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlReminded"
            android:layout_width="71dp"
            android:layout_height="21dp"
            android:layout_alignParentEnd="true"
            android:background="@mipmap/reminded"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:visibility="gone">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#9E9E9E"
                android:textSize="10sp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"
                android:text="提醒我"/>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <com.haoyigou.hyg.ui.RoundImageView
            android:id="@+id/ivPic"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="14dp"/>
        <TextView
            android:id="@+id/title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@id/ivPic"
            android:layout_marginStart="26dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="26dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="15sp"
            android:textColor="#373131"
            android:text="御生堂御生堂御生堂御生堂御生堂御生堂御生堂御生堂御生堂御生堂御生堂"/>

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#E60012"
            android:textSize="19sp"
            android:layout_toEndOf="@id/ivPic"
            android:layout_marginStart="28dp"
            android:layout_below="@id/title"
            android:layout_marginTop="19dp"
            android:text="￥886"/>
        <TextView
            android:id="@+id/listOldPrice"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@id/ivPic"
            android:layout_marginStart="26dp"
            android:layout_below="@id/txtPrice"
            android:layout_marginTop="3dp"
            android:paddingEnd="5dp"
            android:textSize="13sp"
            android:layout_marginBottom="21dp"
            android:textColor="#616161"
            android:text="￥4800"/>

        <ImageView
            android:id="@+id/buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="21dp"
            android:layout_marginTop="67dp"
            android:src="@mipmap/new_qiang"/>
    </RelativeLayout>

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#EEEEEE"/>
</LinearLayout>
