<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingRight="3dp">

        <!--<cn.gavinliu.android.lib.shapedimageview.ShapedImageView-->
            <!--android:layout_marginTop="16dp"-->
            <!--android:id="@+id/week_img"-->
            <!--android:layout_width="102dp"-->
            <!--android:layout_height="102dp"-->
            <!--android:scaleType="fitXY"-->
            <!--android:src="@drawable/default_image"-->
            <!--app:shape_mode="round_rect" />-->
        <com.haoyigou.hyg.ui.RoundImageView
            android:id="@+id/week_img"
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/week_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/week_img"
            android:layout_alignRight="@+id/week_img"
            android:layout_below="@+id/week_img"
            android:layout_marginTop="6dp"
            android:lines="2"
            android:maxLines="2"
            android:text="[两种口味]小老板香脆紫菜"
            android:textColor="#000000"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/week_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/week_text"
            android:layout_below="@+id/week_text"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:text="¥ 69"
            android:textColor="#e60012"
            android:textSize="10dp" />

    </RelativeLayout>


</LinearLayout>