<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="创建好易购会员"
                android:textColor="#5c5c5c"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/create_member_cancle_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:text="关闭"
                android:textColor="#9c9b9b"
                android:textSize="12dp" />
        </RelativeLayout>


        <EditText
            android:id="@+id/create_member_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edit_bg"
            android:gravity="center"
            android:hint="请填写真实姓名"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="#bebdbd"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/create_member_number"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edit_bg"
            android:digits="1234567890"
            android:gravity="center"
            android:textColor="@color/black"
            android:hint="请填写手机号"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColorHint="#bebdbd"
            android:textSize="12dp" />


        <EditText
            android:textColor="@color/black"
            android:id="@+id/create_invite_number"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edit_bg"
            android:digits="1234567890"
            android:gravity="center"
            android:hint="请填写邀请码（可不填）"
            android:inputType="number"
            android:maxLength="10"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColorHint="#bebdbd"
            android:textSize="12dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <EditText
                android:textColor="@color/black"
                android:id="@+id/create_member_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edit_bg"
                android:digits="1234567890"
                android:gravity="center"
                android:hint="验证码"
                android:inputType="number"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColorHint="#bebdbd"
                android:textSize="12dp" />

            <com.haoyigou.hyg.view.widget.TimeButton
                android:id="@+id/create_member_sendcode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/verification_button_bg"
                android:hint="发送验证码"
                android:textColor="#f9ffff"
                android:textColorHint="#f9ffff"
                android:textSize="10dp" />
        </LinearLayout>


        <Button
            android:id="@+id/create_member_sure_button"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/submit_button_bg"
            android:text="提交"
            android:textColor="@color/color_white"
            android:textSize="12dp" />
    </LinearLayout>
</LinearLayout>