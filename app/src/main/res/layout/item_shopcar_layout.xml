<?xml version="1.0" encoding="utf-8"?>
<com.haoyigou.hyg.view.swipemenu.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:clickable="true"
    android:paddingBottom="1dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true">


    <RelativeLayout
        android:id="@+id/item_shopcar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/my_fragment_bg"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <LinearLayout
            android:id="@+id/radio_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/item_radio"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/radio_checked"
                android:button="@null"
                android:checked="false" />
        </LinearLayout>

        <ImageView
            android:id="@+id/item_shop_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/radio_layout"
            android:scaleType="fitXY"
            android:src="@drawable/default_image" />

        <TextView
            android:id="@+id/item_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_shop_img"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="27dp"
            android:layout_toRightOf="@+id/item_shop_img"
            android:maxLines="2"
            android:text=""
            android:textColor="#1b1b1b"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/item_shop_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_shop_name"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/item_shop_img"
            android:singleLine="true"
            android:text=""
            android:textColor="#959595"
            android:textSize="11dp" />


        <TextView
            android:id="@+id/item_shop_content01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_shop_content"
            android:layout_below="@+id/item_shop_name"
            android:layout_marginRight="27dp"
            android:layout_toRightOf="@+id/item_shop_content"
            android:singleLine="true"
            android:text=""
            android:textColor="#959595"
            android:textSize="11dp" />


        <TextView
            android:id="@+id/shop_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_shop_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/item_shop_img"
            android:text=""
            android:textColor="#e72e2d"
            android:textSize="17dp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/shop_price"
            android:layout_marginRight="9dp">

            <ImageButton
                android:id="@+id/shop_cut"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/shop_cut" />

            <View
                android:layout_width="48dp"
                android:layout_height="1px"
                android:layout_alignTop="@+id/shop_cut"
                android:layout_toRightOf="@+id/shop_cut"
                android:background="#d8d8d8" />

            <TextView
                android:id="@+id/shop_num"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/shop_cut"
                android:gravity="center"
                android:text=""
                android:textColor="#535353"
                android:textSize="12dp" />


            <View
                android:layout_width="48dp"
                android:layout_height="1px"
                android:layout_alignBottom="@+id/shop_cut"
                android:layout_toRightOf="@+id/shop_cut"
                android:background="#d8d8d8" />

            <ImageButton
                android:id="@+id/shop_add"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_toRightOf="@+id/shop_num"
                android:background="@drawable/shop_add" />


        </RelativeLayout>


    </RelativeLayout>


    <Button
        android:id="@+id/btnDelete"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:background="@color/pro_red"
        android:text="删除"
        android:textColor="@android:color/white" />


</com.haoyigou.hyg.view.swipemenu.SwipeMenuLayout>