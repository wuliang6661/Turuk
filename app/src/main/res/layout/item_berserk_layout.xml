<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/commodity_img"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_marginLeft="6dp"
            android:scaleType="fitXY" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/commodity_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:maxLines="2"
                android:text="[3包]张君雅拉面条饼"
                android:textColor="@color/D"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/commodity_old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="市场价：¥ 20"
                android:textColor="@color/P"
                android:textSize="10dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="疯抢价："
                    android:textColor="@color/pro_red"
                    android:textSize="16dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥ "
                    android:textColor="@color/pro_red"
                    android:textSize="11dp" />


                <TextView
                    android:id="@+id/commodity_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textColor="@color/pro_red"
                    android:textSize="17dp" />

            </LinearLayout>


            <TextView
                android:id="@+id/go_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_red2_brolder"
                android:gravity="center"
                android:paddingBottom="7dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="7dp"
                android:text="即将开抢"
                android:textColor="@color/mainBlue"
                android:textSize="13dp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>