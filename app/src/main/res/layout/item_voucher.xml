<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/youhuijiuan"
        android:id="@+id/youhuijuanbg"
        android:layout_marginTop="12dp"
        android:layout_width="338dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="71dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="100dp">
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="40dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="15dp"
                            android:id="@+id/biaoshi"
                            android:textColor="#ffffff"
                            android:layout_marginTop="19dp"
                            android:text="¥"
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textColor="#ffffff"
                            android:id="@+id/jine"
                            android:layout_marginTop="10dp"
                            android:textSize="24dp"

                            android:layout_marginLeft="3dp"
                            android:layout_toRightOf = "@+id/biaoshi"
                            android:text="10"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/tatle"
                    android:textSize="11dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#ffffff"
                    android:text="满100元使用"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="100dp"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/men"
                        android:textColor="#000000"
                        android:layout_marginLeft="11dp"
                        android:layout_marginTop="14dp"
                        android:textSize="15dp"
                        android:text="新春10元话费劵"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginTop="6dp"
                            android:textSize="11dp"
                            android:textColor="#000000"
                            android:text="有效期："
                            android:layout_marginLeft="11dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/kaishi"
                            android:layout_marginTop="6dp"
                            android:textSize="11dp"
                            android:textColor="#000000"
                            android:text="2018-1-8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginTop="6dp"
                            android:textSize="11dp"
                            android:textColor="#000000"
                            android:text="—"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/jieshu"
                            android:layout_marginTop="6dp"
                            android:textSize="11dp"
                            android:textColor="#000000"
                            android:text="2018-2-8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>