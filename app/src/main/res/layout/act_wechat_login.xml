<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/main_header_layout" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@mipmap/newlogo" />


    <EditText
        android:id="@+id/wechat_infomation_mobile"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="40dp"
        android:background="@null"
        android:digits="1234567890"
        android:hint="手机号码"
        android:inputType="number"
        android:maxLength="11"
        android:singleLine="true"
        android:textColor="#666666"
        android:textColorHint="#bebebe"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="2dp"
        android:background="#bebebe" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/image_code_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="图文验证"
            android:maxLength="6"
            android:singleLine="true"
            android:textColor="#666666"
            android:textColorHint="#bebebe"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/image_code"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="发送验证码"
            android:textColor="#ffffff"
            android:textSize="10dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="2dp"
        android:background="#bebebe" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/wechat_login_etcode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="@null"
            android:digits="1234567890"
            android:hint="手机验证码"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="#666666"
            android:textColorHint="#bebebe"
            android:textSize="14sp" />

        <com.haoyigou.hyg.view.widget.TimeButton
            android:id="@+id/wechat_login_timebutton"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/verification_button"
            android:text="发送验证码"
            android:textColor="#ffffff"
            android:textSize="10dp" />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="2dp"
        android:background="#bebebe" />


    <Button
        android:id="@+id/wechat_infomation_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_button"
        android:text="提交"
        android:textColor="#ffffff" />


</LinearLayout>