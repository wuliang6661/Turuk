<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refresh_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        android:orientation="vertical">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                app:elevation="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:canLoop="true"
                    app:layout_scrollFlags="scroll|snap">
                    <com.bigkoo.convenientbanner.ConvenientBanner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="#ffffff"
                        app:canLoop="true"
                        app:layout_scrollFlags="scroll|snap" />
                    <ImageView
                        android:id="@+id/share"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/share"
                        android:visibility="gone" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:background="#ffffff">

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        app:tabBackground="@drawable/tablayout_selector"
                        app:tabGravity="center"
                        app:tabIndicatorColor="#FFC9191D"
                        app:tabIndicatorHeight="0dp"
                        app:tabSelectedTextColor="#FFC9191D"
                        app:tabTextAppearance="@style/TabLayoutTextStyle"
                        app:tabTextColor="#2B2B2B" />
                </RelativeLayout>
            </com.google.android.material.appbar.AppBarLayout>
            <!--<com.haoyigou.hyg.view.viewpager.ViewPagerSlide-->
                <!--android:id="@+id/vp_list"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_marginTop="1dp"-->
                <!--android:background="#ffffff"-->
                <!--app:layout_behavior="@string/appbar_scrolling_view_behavior" />-->
            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/refreshProdect"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f5f5f5"
                android:layout_marginTop="1dp"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <com.haoyigou.hyg.view.widget.HeaderGridView
                    android:id="@+id/grid_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:numColumns="1" />
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


    <ImageView
        android:id="@+id/topButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/top"
        android:visibility="gone" />

</LinearLayout>