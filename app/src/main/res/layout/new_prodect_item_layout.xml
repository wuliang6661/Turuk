<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="12dp"
    android:background="@drawable/list_bg"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="3dp">
    <LinearLayout
        android:id="@+id/llParent"
        android:layout_height="290dp"
        android:layout_width="179dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:id="@+id/rlPic"
            android:layout_width="168dp"
            android:layout_height="168dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp">
            <com.haoyigou.hyg.ui.RoundImageView2
                android:id="@+id/ivTitle2"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop" />
            <com.haoyigou.hyg.ui.RoundImageView2
                android:id="@+id/ivTitle"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop" />
            <RelativeLayout
                android:id="@+id/rlSecondtitle"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:background="@drawable/bg_secondtitle"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/txtSecondTitle"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#C69C71"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="22dp"
                    android:layout_marginEnd="22dp"
                    android:ellipsize="end"/>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/llLable"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginStart="13dp">
            <RelativeLayout
                android:id="@+id/rlActivity"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@drawable/bg_activitynew">
                <TextView
                    android:id="@+id/tvCount"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginEnd="5dp"
                    android:text="2件七五折"
                    android:textSize="10sp"
                    android:textColor="@color/mainBlue"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlTwo"
                android:layout_height="15dp"
                android:layout_width="15dp"
                android:background="@drawable/image_ovalactivity"
                android:layout_marginTop="3dp"
                android:layout_marginStart="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="券"
                    android:textSize="10sp"
                    android:textColor="@color/mainBlue"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlActivity2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@drawable/bg_activitynew"
                android:layout_marginStart="6dp">
                <TextView
                    android:id="@+id/tvCount2"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginEnd="5dp"
                    android:text="百花节特惠"
                    android:textSize="10sp"
                    android:textColor="@color/mainBlue"/>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="17dp"
            android:layout_marginTop="8dp"
            android:textColor="#333333"
            android:textSize="14sp"
            android:text=""/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/nowPrice"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#E60012"
                android:textSize="14sp"
                android:text=""/>
            <TextView
                android:id="@+id/oldPrice"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#D2D2D2"
                android:textSize="10sp"
                android:layout_marginStart="12dp"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
