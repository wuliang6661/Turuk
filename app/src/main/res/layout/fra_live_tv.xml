<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/layout_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorline"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/applive_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:gravity="center"
                android:id="@+id/activity_applive_button"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:text="APP直播"
                android:textSize="16dp"
                android:textColor="@color/live_slider" />
            <ImageView
                android:id="@+id/app_slider"
                android:layout_gravity="center_horizontal"
                android:layout_width="78dp"
                android:layout_height="1dp"
                android:background="@color/live_slider"
                android:visibility="visible"
                />

        </LinearLayout>
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="1dp"
            android:layout_height="19dp"
            android:background="@color/live_center" />
        <LinearLayout
            android:id="@+id/tvlistbutton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:gravity="center"
                android:id="@+id/activity_tvlive_button"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:text="电视直播"
                android:textSize="16dp"
                android:textColor="@color/live_text" />
            <ImageView
                android:id="@+id/tv_slider"
                android:layout_gravity="center_horizontal"
                android:layout_width="78dp"
                android:layout_height="1dp"
                android:background="@color/live_slider"
                android:visibility="gone"

                />


        </LinearLayout>





    </LinearLayout>


    <RelativeLayout
        android:id="@+id/live_video_layout"
        android:layout_width="match_parent"
        android:layout_height="205dp">

        <com.yunfan.player.widget.YfPlayerKit
            android:id="@+id/surface_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/G" />


        <RelativeLayout
            android:id="@+id/buttom_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="#50000000">

            <ImageView
                android:id="@+id/voice_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/voice" />

            <ImageView
                android:id="@+id/live_all"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="24dp"
                android:background="@drawable/all" />

        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ListView
            android:id="@+id/shop_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="热销榜"
            android:textColor="@color/title_bg"
            android:textSize="15dp"
            android:visibility="gone" />

    </RelativeLayout>


</LinearLayout>