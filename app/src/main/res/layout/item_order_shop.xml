<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/rlBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shop_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="13dp"
            android:scaleType="fitXY" />


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp">

                <TextView
                    android:id="@+id/order_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="52dp"
                    android:singleLine="true"
                    android:text="纯天然农家蜂蜜百花成熟蜜"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/order_moket_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:text="×1"
                    android:textColor="@color/N"
                    android:textSize="12dp" />


            </RelativeLayout>


            <TextView
                android:id="@+id/order_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout1"
                android:layout_marginTop="5dp"
                android:text="规格：300g*1瓶"
                android:textColor="@color/N"
                android:textSize="12dp" />


            <LinearLayout
                android:id="@+id/price_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_style"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="¥ 110"
                    android:textColor="@color/black"
                    android:textSize="12dp" />


                <TextView
                    android:id="@+id/order_oldprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="¥ 110"
                    android:textColor="@color/N"
                    android:textSize="12dp" />

            </LinearLayout>


            <TextView
                android:id="@+id/apply_sales"
                android:layout_width="67dp"
                android:layout_height="25dp"
                android:layout_alignBottom="@+id/price_layout"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/button_gray2_brolder"
                android:gravity="center"
                android:text="申请售后"
                android:textColor="@color/N"
                android:textSize="14dp" />


        </RelativeLayout>


    </LinearLayout>


</LinearLayout>