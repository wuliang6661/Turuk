<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea"
    android:orientation="vertical">

    <include layout="@layout/header_layout" />

    <RelativeLayout
        android:id="@+id/fenlei_layout"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/all_order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="全部订单"
                android:textColor="@color/mainBlue"
                android:textSize="13dp" />


            <TextView
                android:id="@+id/payment_order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="待付款"
                android:textColor="@color/D"
                android:textSize="13dp" />


            <TextView
                android:id="@+id/drop_order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="待发货"
                android:textColor="@color/D"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/shipped_order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="待收货"
                android:textColor="@color/D"
                android:textSize="13dp" />

        </LinearLayout>


        <View
            android:id="@+id/ani_line"
            android:layout_width="63dp"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="13dp"
            android:background="@color/mainBlue" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efefef" />


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refresh_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:visibility="visible">

        <com.haoyigou.hyg.view.widget.TopAndButtomListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/F"
            android:dividerHeight="10dp" />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


    <LinearLayout
        android:id="@+id/not_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:orientation="vertical">


        <ImageView
            android:layout_width="76dp"
            android:layout_height="77dp"
            android:layout_marginTop="96dp"
            android:background="@drawable/order_not" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="还没有相关的订单呢"
            android:textColor="@color/N"
            android:textSize="13dp" />


    </LinearLayout>


</LinearLayout>