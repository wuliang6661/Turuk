<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:background="@color/white"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/live_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/default_image" />


            <RelativeLayout
                android:id="@+id/store_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#35000000"
                android:visibility="gone">

                <ImageView
                    android:layout_width="79dp"
                    android:layout_height="79dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/shop_store" />

            </RelativeLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="22dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/live_time_img"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@drawable/time1" />

                <TextView
                    android:id="@+id/live_time_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="10:20"
                    android:textColor="#888888"
                    android:textSize="13dp" />


                <TextView
                    android:id="@+id/live_type"
                    android:layout_width="45dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/title_bg"
                    android:gravity="center"
                    android:text="直播中"
                    android:textColor="@color/white"
                    android:textSize="10dp" />

            </LinearLayout>


            <TextView
                android:id="@+id/live_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="21dp"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:text="【跨境保税唇膏】产品名称什么"
                android:textColor="#333333"
                android:textSize="13dp" />


            <TextView
                android:id="@+id/live_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="市场价：¥ 20"
                android:textColor="#525254"
                android:textSize="10dp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/price_stutus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥ "
                        android:textColor="@color/title_bg"
                        android:textSize="11dp" />


                    <TextView
                        android:id="@+id/live_allprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="69.9"
                        android:textColor="@color/title_bg"
                        android:textSize="16dp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/live_tishi"
                    android:layout_width="67dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_red_border"
                    android:focusable="false"
                    android:gravity="center"
                    android:text="直播提醒"
                    android:textColor="@color/title_bg"
                    android:textSize="11dp" />


            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>