<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.haoyigou.hyg.fragment.ShoppingCartFragment">

    <!--<com.haoyigou.hyg.activity.JocellWebView
        android:id="@+id/cart_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.haoyigou.hyg.activity.JocellWebView>-->


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/title_bg">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="9dp"
                android:layout_height="19dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/back_to_superior" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:text="购物车"
            android:textColor="@color/white"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:layout_marginRight="12dp"
            android:text="编辑"
            android:textColor="@color/white"
            android:textSize="14dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/factory"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/header"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:visibility="gone">
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFC9191D"
            android:layout_alignParentBottom="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp">
                <RelativeLayout
                    android:id="@+id/factoryOneSelect"
                    android:layout_alignParentBottom="true"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:background="@drawable/factory_bg_select"
                    android:visibility="visible">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="仓库1"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/factoryOneNotSelect"
                    android:layout_alignParentBottom="true"
                    android:layout_width="75dp"
                    android:layout_height="25dp"
                    android:background="@drawable/factory_bg_noselect"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/factoryOneHave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="仓库1"
                        android:textSize="12sp"
                        android:textColor="#FFC9191D"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/factoryTwoSelect"
                    android:layout_alignParentBottom="true"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="2dp"
                    android:background="@drawable/factory_bg_select"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="仓库2"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/factoryTwoNotSelect"
                    android:layout_alignParentBottom="true"
                    android:layout_width="75dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="2dp"
                    android:background="@drawable/factory_bg_noselect">
                    <TextView
                        android:id="@+id/factoryTwoHave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="仓库2"
                        android:textSize="12sp"
                        android:textColor="#FFC9191D"
                        android:layout_centerInParent="true"/>
                    <View
                        android:id="@+id/viewFactoryTwo"
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:background="@drawable/image_oval"
                        android:layout_toEndOf="@id/factoryTwoHave"
                        android:layout_marginTop="7dp"
                        android:layout_marginStart="8dp"/>
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlFreeFee"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/factory"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#FFFFFF"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="凑单"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="11dp"
            android:background="@drawable/cou_bg"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"/>
        <TextView
            android:id="@+id/txtDescribe"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="55dp"
            android:textSize="12sp"
            android:textColor="#212121"
            android:text=""/>
        <RelativeLayout
            android:id="@+id/rlGoTo"
            android:layout_width="79dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:text="去凑单 >"
                android:textColor="#D52523"
                android:textSize="12sp"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlExchange"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/rlFreeFee"
        android:layout_marginTop="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#FFFFFF"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="换购"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="11dp"
            android:background="@drawable/cou_bg"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"/>
        <TextView
            android:id="@+id/exchangeDescribe"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="55dp"
            android:textSize="12sp"
            android:textColor="#212121"
            android:text=""/>
        <RelativeLayout
            android:id="@+id/rlGoToExchange"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:visibility="visible"
            android:layout_marginEnd="12dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:text=" >"
                android:textColor="#D52523"
                android:textSize="12sp"/>
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/buttom_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/all_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/all_radio"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@drawable/radio_checked"
                android:button="@null" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:text="全选"
                android:textColor="#1b1b1b"
                android:textSize="14dp" />
        </LinearLayout>

        <Button
            android:id="@+id/summary_button"
            android:layout_width="77dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/btn_bg"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="去结算"
            android:textColor="@color/white"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/all_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/summary_button"
            android:text="￥0.00"
            android:textColor="#e72e2d"
            android:textSize="15dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/all_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:layout_toLeftOf="@+id/all_price"
            android:text="合计"
            android:textColor="#1b1b1b"
            android:textSize="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f5f5" />


    </RelativeLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refresh_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f5f5f5"
        android:layout_above="@+id/ll_activity"
        android:layout_below="@+id/rlExchange">
        <com.scwang.smartrefresh.layout.header.FalsifyHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ListView
            android:id="@+id/shopcar_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#f5f5f5"
            android:dividerHeight="10dp"
            android:paddingTop="10dp"
            android:visibility="visible"
            android:scrollbars="none">
        </ListView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <LinearLayout
        android:id="@+id/not_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttom_layout"
        android:layout_below="@+id/header"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">


        <ImageView
            android:layout_width="76dp"
            android:layout_height="77dp"
            android:layout_marginTop="186dp"
            android:background="@drawable/shopcar_not" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="去添加点什么吧"
            android:textColor="@color/N"
            android:textSize="13dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_activity"
        android:layout_height="35dp"
        android:layout_width="match_parent"
        android:background="@drawable/my_fragment_bg"
        android:layout_above="@id/buttom_layout"
        android:layout_marginBottom="11dp"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone">
        <com.haoyigou.hyg.view.textview.DrawableCenterTextView
            android:id="@+id/tvActivityOne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="满69元免运费"
            android:textColor="@color/mainBlue"
            android:textSize="12sp"
            android:drawableStart="@mipmap/red_swoosh"
            android:layout_gravity="center" />
        <com.haoyigou.hyg.view.textview.DrawableCenterTextView
            android:id="@+id/tvActivityTwo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="16天无忧鉴赏"
            android:textColor="@color/mainBlue"
            android:textSize="12sp"
            android:drawableStart="@mipmap/red_swoosh"
            android:layout_gravity="center" />
        <com.haoyigou.hyg.view.textview.DrawableCenterTextView
            android:id="@+id/tvActivityThree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="24小时电话客服"
            android:textColor="@color/mainBlue"
            android:textSize="12sp"
            android:drawableStart="@mipmap/red_swoosh"
            android:layout_gravity="center"/>
    </LinearLayout>

</RelativeLayout>
