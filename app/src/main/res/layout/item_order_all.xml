<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="15dp"
                android:text="订单编号：356561511515151"
                android:textColor="@color/D"
                android:textSize="13dp" />


            <TextView
                android:id="@+id/order_stutus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/order_num"
                android:layout_marginRight="12dp"
                android:text="已完成"
                android:textColor="@color/pro_red"
                android:textSize="13dp" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/order_img"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:layout_marginLeft="23dp"
                android:scaleType="fitXY"
                android:src="@drawable/default_image" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="12dp"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/order_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="52dp"
                        android:singleLine="true"
                        android:text="纯天然农家蜂蜜百花成熟蜜"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/order_moket_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="×1"
                        android:textColor="@color/N"
                        android:textSize="12dp" />


                </RelativeLayout>


                <TextView
                    android:id="@+id/order_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="规格：300g*1瓶"
                    android:textColor="@color/N"
                    android:textSize="12dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/order_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="¥ 110"
                        android:textColor="@color/black"
                        android:textSize="12dp" />


                    <TextView
                        android:id="@+id/order_oldprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="¥ 110"
                        android:textColor="@color/N"
                        android:textSize="12dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="bottom"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/order_num_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="共1件商品 合计："
                        android:textColor="@color/D"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥"
                        android:textColor="@color/title_bg"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/order_allprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="110"
                        android:textColor="@color/pro_red"
                        android:textSize="19dp" />


                    <TextView
                        android:id="@+id/order_carriage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:singleLine="true"
                        android:text="（运费：¥8.00）"
                        android:textColor="@color/N"
                        android:textSize="13dp" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="12dp"
            android:background="@color/E" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_button3"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_gray2_brolder"
                android:gravity="center"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:text="领红包"
                android:textColor="@color/N"
                android:textSize="13dp"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/order_button1"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="11dp"
                android:background="@drawable/button_gray2_brolder"
                android:gravity="center"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:text="查看物流"
                android:textColor="@color/N"
                android:textSize="13dp" />


            <TextView
                android:id="@+id/order_button2"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_gray2_brolder"
                android:gravity="center"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:text="再次购买"
                android:textColor="@color/N"
                android:textSize="13dp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>