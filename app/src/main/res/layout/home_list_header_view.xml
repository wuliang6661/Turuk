<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <com.haoyigou.hyg.adapter.RollHeaderView
        android:id="@+id/gd_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.haoyigou.hyg.adapter.RollHeaderView>


    <TextView
        android:id="@+id/video_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:textColor="#2b2b2b"
        android:textSize="16dp" />

    <LinearLayout
        android:id="@+id/video_layout"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/video_fragment"
            android:name="com.haoyigou.hyg.fragment.VideoFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tag="video" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/fengqiang_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在疯抢"
            android:textColor="#e60012"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/next_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fengqiang_text"
            android:layout_marginLeft="31dp"
            android:layout_toRightOf="@+id/fengqiang_text"
            android:text="下期预告"
            android:textColor="#666666"
            android:textSize="15dp" />

        <View
            android:id="@+id/view_line"
            android:layout_width="72dp"
            android:layout_height="2dp"
            android:layout_below="@+id/fengqiang_text"
            android:layout_marginTop="9dp"
            android:background="#e60012" />

        <View
            android:id="@+id/view_line2"
            android:layout_width="72dp"
            android:layout_height="2dp"
            android:layout_alignLeft="@+id/next_notice"
            android:layout_below="@+id/next_notice"
            android:layout_marginTop="9dp"
            android:background="#e60012"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:id="@+id/not_fengqiang"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="暂无活动！敬请期待！"
        android:textColor="#000000"
        android:textSize="12dp"
        android:visibility="gone" />


    <com.haoyigou.hyg.view.widget.ListViewForScrollView
        android:id="@+id/fengqiang_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@null"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/week_text_bg"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="2dp"
            android:text="每周上新"
            android:textColor="@color/title_bg"
            android:textSize="14dp" />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/week_news_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#0000"
        android:divider="#0000"
        android:listSelector="#0000"
        android:scrollbars="none" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/more"
            android:layout_width="40dp"
            android:layout_height="18dp"
            android:background="@drawable/more" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="@color/title_bg"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/huodong_text_bg"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="2dp"
            android:text="本月活动"
            android:textColor="@color/white"
            android:textSize="14dp" />

    </LinearLayout>


    <com.haoyigou.hyg.view.widget.ListViewForScrollView
        android:id="@+id/huodong_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"></com.haoyigou.hyg.view.widget.ListViewForScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/title_bg"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/huodong_text_bg"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="2dp"
            android:text="超值热卖"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>


    <com.haoyigou.hyg.view.widget.ListViewForScrollView
        android:id="@+id/chaozhi_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"></com.haoyigou.hyg.view.widget.ListViewForScrollView>


</LinearLayout>