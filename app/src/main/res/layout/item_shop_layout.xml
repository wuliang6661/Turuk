<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/shop_img_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/shop_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/default_image"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/add_pic"
            android:layout_width="47dp"
            android:layout_height="46dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_boom" />


        <ImageView
            android:id="@+id/custom_pic"
            android:layout_width="75dp"
            android:layout_height="52dp"
            android:scaleType="fitXY" />


        <RelativeLayout
            android:id="@+id/store_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#35000000"
            android:visibility="gone">

            <ImageView
                android:layout_width="79dp"
                android:layout_height="79dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/shop_store" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/youhui"
            android:layout_width="21dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ticket" />


        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/youhui"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/youhui"
            android:text="1.春天瑞朵一片式无钢圈聚拢文胸"
            android:textColor="#000000"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="市场价：¥ 11"
            android:textColor="#888888"
            android:textSize="11dp"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/shop_name"
            android:layout_marginTop="10dp"
            android:text="¥ 55"
            android:textColor="#E60012"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/price"
            android:background="#ececec" />


    </RelativeLayout>


</LinearLayout>