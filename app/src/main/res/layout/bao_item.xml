<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="133dp"
    android:orientation="horizontal"
    android:background="@drawable/list_bg"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    android:layout_marginBottom="8dp"
    android:id="@+id/llBack">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:layout_gravity="center">
            <com.haoyigou.hyg.ui.RoundImageView2
                android:id="@+id/titleImg2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            <com.haoyigou.hyg.ui.RoundImageView2
                android:id="@+id/titleImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_height="match_parent"
        android:layout_width="1dp"
        android:background="#5479E7"/>
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/prodectTitle"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="21dp"
            android:textSize="13sp"
            android:textColor="#373131"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginEnd="21dp"
            android:text="晨韵舒适法兰绒家居睡衣晨韵舒适法兰绒家居睡衣"/>

        <TextView
            android:id="@+id/prodectDes"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_below="@id/prodectTitle"
            android:layout_marginTop="6dp"
            android:textColor="#5A5A5A"
            android:textSize="10sp"
            android:text="晨韵舒适法兰"/>

        <LinearLayout
            android:id="@+id/llActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/prodectDes"
            android:layout_marginTop="10dp"
            android:layout_marginStart="22dp">
            <RelativeLayout
                android:id="@+id/rlActivity"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@drawable/bg_activitynew">

                <TextView
                    android:id="@+id/tvCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="3dp"
                    android:text="2件七五折"
                    android:textColor="@color/mainBlue"
                    android:textSize="9sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlTwo"
                android:layout_height="16dp"
                android:layout_width="16dp"
                android:background="@drawable/image_ovalactivity"
                android:layout_marginTop="3dp"
                android:layout_marginStart="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="券"
                    android:textSize="10sp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/mainBlue" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlActivity2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@drawable/bg_activitynew"
                android:layout_marginStart="6dp">
                <TextView
                    android:id="@+id/tvCount2"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginEnd="5dp"
                    android:text="百花节特惠"
                    android:textSize="9sp"
                    android:textColor="@color/mainBlue"/>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="24dp"
            android:layout_below="@id/llActivity"
            android:layout_marginTop="17dp">
            <TextView
                android:id="@+id/nowPrice"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="17sp"
                android:textColor="#E60012"
                android:text="￥99"/>
            <TextView
                android:id="@+id/oldPrice"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/nowPrice"
                android:textColor="#616161"
                android:textSize="10sp"
                android:text="￥199" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/buy"
            android:layout_width="69dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="7dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:src="@mipmap/blue_qiang"/>

    </RelativeLayout>

</LinearLayout>
